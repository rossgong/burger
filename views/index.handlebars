<ul class="flex">
    {{#each sandwiches}}
    {{#unless devoured}}
    <li>
        <p> {{sandwich_name}} </p>
    </li>
    {{/unless}}
    {{/each}}
</ul>

{{!-- Sandwich form --}}
<form action="" method="post">
    <div class="form-group">
        <label for="sandwich-name">Sandwich Name</label>
        <input type="text" name="sandwich" id="sandwich-name">
    </div>
    <button type="submit" class="btn btn-default">Submit!</button>
</form>