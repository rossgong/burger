<div class="d-flex flex-row">
	<ul class="list-group">
		{{#each sandwiches}}
		{{#unless devoured}}
		<li class="list-group-item">
			<p>{{sandwich_name}}</p>
			<button class="btn primary devour" data-id="{{id}}">Devour!</button>
		</li>
		{{/unless}}
		{{/each}}
	</ul>

	<ul class="list-group">
		{{#each sandwiches}}
		{{#if devoured}}
		<li class="list-group-item">
			{{sandwich_name}}
		</li>
		{{/if}}
		{{/each}}
	</ul>


</div>

{{!-- Sandwich form --}}
<form action="" method=" post">
	<div class="form-group">
		<label for="sandwich-name">Sandwich Name</label>
		<input type="text" name="sandwich" id="sandwich-name">
	</div>
	<button type="submit" class="btn btn-default" id="sand-sub">Submit!</button>
</form>